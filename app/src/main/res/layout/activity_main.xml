<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.pinggu.cda.slider.MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <TextView
       android:id="@+id/font"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="小"
       android:textSize="18sp"
       android:layout_marginLeft="15dp"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="中"
       android:textSize="18sp"
       android:layout_centerHorizontal="true"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="大"
       android:textSize="18sp"
       android:layout_marginRight="15dp"
       android:layout_alignParentRight="true"
       />
   <org.pinggu.cda.widget.Slider
       android:id="@+id/slider_sl_discrete"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       app:sl_value="50"
       android:layout_below="@+id/font"
       android:layout_marginTop="-5dp"
       app:sl_textColor="#fff"
       app:sl_textSize="10sp"
       app:sl_discreteMode="true"
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
       app:sl_primaryColor="@color/colorSliderLinePre"
       app:v_styleId="@array/slider_discrete" />

</RelativeLayout>

</RelativeLayout>
